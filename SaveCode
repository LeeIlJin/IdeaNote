#include <iostream>
#include <memory.h>

using namespace std;

void Sort(int,int*);
void Alg(int);
bool Check(int);

int N, M;

int* nums;
int* result;

int main()
{
    cin.tie(NULL);
    cout.tie(NULL);
    
    cin >> N >> M;
    
    nums = new int[N];
    for(int i=0; i<N; i++)
        cin>> nums[i];
    Sort(N,nums);
    
    
    result = new int[M];
    memset(result, 0, M * sizeof(int));
    
    Alg(0);
    
    
    delete[] nums;
    return 0;
}

void Sort(int count, int* array)
{
    for(int i=0; i<count-1; i++)
    {
        int index = i;
        for(int j=i+1; j<count; j++)
        {
            if(array[j] < array[index])
            {
                index = j;
            }
        }
        if(index != i)
        {
            int temp = array[i];
            array[i] = array[index];
            array[index] = temp;
        }
    }
}

bool Check(int c)
{
    return true;
}

void Alg(int c)
{
    if(c == M)
    {
        for(int i=0; i<M; i++)
            cout << result[i] << " ";
        cout << "\n";
        return;
    }
    
    for(int i=0; i<N; i++)
    {
        if(nums[i] < 0)
            continue;
        
        result[c] = nums[i];
        
        nums[i] = -nums[i];
        Alg(c+1);
        nums[i] = -nums[i];
    }
    
    return;
}
